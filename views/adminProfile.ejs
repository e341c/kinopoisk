<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head.ejs') %>
    <title>Document</title>
</head>
<body>
    <%- include('partials/header.ejs') %>
    <div class="container">
        <div class="main">
            <%- include('partials/categories.ejs') %>
            <div class="main-content">
                <h3>Профиль</h3>
                <div class="profile">
                    <div class="profile-img">
                        <img src="/images/User-avatar.svg.png" alt="">
                    </div>
                    <div class="profile-info">
                        <p><span>Полное имя:</span><%= user.full_name %></p> 
                        <p><span>E-mail:</span><%= user.email %></p>
                        <div class="profile-btns">
                            <a class="btn btn-primary">Редактировать профиль</a>
                            <a href="/api/signout" class="btn btn-danger">Выход</a>
                        </div>
                    </div>
                </div>
                <h3>Фильмы</h3>
                <a style="text-decoration: none;" href="/new">
                    <button class="btn btn-primary">Добавить фильм</button>
                </a>
                <% films.forEach(film => { %>
                    <div class="main-card">
                        <div class="card-left">
                            <div class="film-img">
                                <img src="<%= film.image %>" alt="">
                            </div>
                            <div class="film-info">
                                <a href=""><%= film.titleRus %></a>
                                <a href=""><%= film.titleEng %>, <%= film.year %>, <%= film.time %> мин.</a>
                                <a href=""><%= film.country.name %> • <%= film.genre.name %>, Режиссёр: -</a>
                                <a href=""> В ролях: - </a>
                                <a href="">Автор: <%= film.author.full_name %></a>
                                <div>
                                    <button class="film-btn">
                                        <img src="/images/icons/play 2 btn.svg" alt="">
                                        Смотреть
                                    </button>
                                </div>
                                
                            </div>
                        </div>
                        <div class="card-right">
                            <div class="film-rate">
                                <img src="/images/icons/rating left.svg" alt="">
                                <p>--</p>
                                <img src="/images/icons/rating right.svg" alt="">
                            </div>
                            <div class="admin-btns">
                                <a href="/edit/<%=film._id%>" class="btn btn-edit">
                                    Редактировать
                                </a>
                                <button class="btn btn-danger">
                                    Удалить
                                </button>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
</body>
</html>